<%= form_with url: "/boxes/#{@box.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :capacity %>
  <%= form.text_field :capacity %>
  <%= form.label :full, "Full?" %>
  <%= form.text_field :full %>
  
  <%= form.submit "Update Box" %>
<% end %>
